<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración de Familia"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué deseas hacer?"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <RadioGroup
            android:id="@+id/familyOptionsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/createFamilyRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear nueva familia"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/joinFamilyRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unirse a familia existente"/>
        </RadioGroup>

        <EditText
            android:id="@+id/familyNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la familia"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/familyCodeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código de familia"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:layout_marginTop="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>